<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/bg_yellow_corner"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/bg_yellow_top_left_bottom_right"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:textColor="@color/colorAccentDark"
                android:text="Thông tin QR code"
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tvData"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/colorAccentDark"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@id/tvTitle"
                android:text="Dữ liệu khách hàng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvResult"
                android:padding="12dp"
                android:enabled="false"
                android:textColor="@color/colorAccentDark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/bg_white_conner_border"
                app:layout_constraintTop_toBottomOf="@id/tvData"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>